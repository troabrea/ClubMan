@using TextOverflow = Blazorise.TextOverflow
<Container Margin="Margin.Is2">
    @* <Divider DividerType="DividerType.TextContent" Text="Datos Personales"/> *@
    <Fields>
        <Field ColumnSize="ColumnSize.Is3">
            <FieldLabel>Cédula o Pasaporte</FieldLabel>
            <TextEdit ReadOnly="false" @bind-Text="Solicitud.NumeroIdentidad"></TextEdit>
        </Field>
        <Field ColumnSize="ColumnSize.Is3">
            <FieldLabel >Estado Civil</FieldLabel>
            <FieldBody>
                <RadioGroup Disabled="false" TValue="EstadoCivil" @bind-CheckedValue="Solicitud.EstadoCivil" Inline="true">
                    <Radio Disabled="false" ReadOnly="false" Value="@(EstadoCivil.Casado)">Casado</Radio>
                    <Radio Disabled="false" Value="@(EstadoCivil.Soltero)">Soltero</Radio>
                </RadioGroup>
            </FieldBody>
        </Field>

        <Field ColumnSize="ColumnSize.Is3">
            <FieldLabel >Sexo</FieldLabel>
            <FieldBody>
                <RadioGroup Disabled="false" TValue="Sexo" @bind-CheckedValue="Solicitud.Sexo" Inline="true">
                    <Radio Disabled="false" ReadOnly="false" Value="@(Sexo.Masculino)">M</Radio>
                    <Radio Disabled="false" Value="@(Sexo.Femenino)">F</Radio>
                </RadioGroup>
            </FieldBody>
        </Field>
        <Field ColumnSize="ColumnSize.Is3">
            <FieldLabel>RNC</FieldLabel>
            <TextEdit ReadOnly="false" @bind-Text="Solicitud.NumeroFiscal"></TextEdit>
        </Field>
    </Fields>
    <Fields Margin="Margin.Is1.FromTop">
        <Field Horizontal ColumnSize="ColumnSize.Is4">
            <FieldLabel ColumnSize="ColumnSize.Is4">Nacimiento</FieldLabel>
            <FieldBody ColumnSize="ColumnSize.Is8"><DatePicker ReadOnly="false" DisplayFormat="dd-MMM-yyyy" @bind-Date="Solicitud.FechaNacimiento"/></FieldBody>
        </Field>

        <Field Horizontal ColumnSize="ColumnSize.Is4">
            <FieldLabel ColumnSize="ColumnSize.Is4">Edad</FieldLabel>
            <FieldBody ColumnSize="ColumnSize.Is8"><NumericEdit ReadOnly="false" Value="Solicitud.Edad"/></FieldBody>
        </Field>

        <Field Horizontal ColumnSize="ColumnSize.Is4">
            <FieldLabel ColumnSize="ColumnSize.Is4">Nacionalidad</FieldLabel>
            <FieldBody ColumnSize="ColumnSize.Is8"><TextEdit ReadOnly="false" @bind-Text="Solicitud.Nacionalidad"/></FieldBody>
        </Field>

    </Fields>
    <Field Horizontal ColumnSize="ColumnSize.Is12">
        <FieldLabel ColumnSize="ColumnSize.Is2">Dirección</FieldLabel>
        <FieldBody ColumnSize="ColumnSize.Is10"><TextEdit ReadOnly="false" @bind-Text="Solicitud.Direccion"/></FieldBody>
    </Field>
    <Fields Margin="Margin.Is1.FromTop">
        <Field Horizontal ColumnSize="ColumnSize.Is4">
            <FieldLabel ColumnSize="ColumnSize.Is3">Sector</FieldLabel>
            <FieldBody ColumnSize="ColumnSize.Is9"><TextEdit ReadOnly="false" @bind-Text="Solicitud.Sector"/></FieldBody>
        </Field>
        <Field Horizontal ColumnSize="ColumnSize.Is4">
            <FieldLabel ColumnSize="ColumnSize.Is3">Ciudad</FieldLabel>
            <FieldBody ColumnSize="ColumnSize.Is9"><TextEdit ReadOnly="false" @bind-Text="Solicitud.Ciudad"/></FieldBody>
        </Field>
        <Field Horizontal ColumnSize="ColumnSize.Is4">
            <FieldLabel ColumnSize="ColumnSize.Is3">País</FieldLabel>
            <FieldBody ColumnSize="ColumnSize.Is9"><TextEdit ReadOnly="false" @bind-Text="Solicitud.Pais"/></FieldBody>
        </Field>
    </Fields>
    <Fields Margin="Margin.Is1.FromTop">
        <Field Horizontal ColumnSize="ColumnSize.Is4">
            <FieldLabel ColumnSize="ColumnSize.Is3">Teléfono</FieldLabel>
            <FieldBody ColumnSize="ColumnSize.Is9"><TextEdit ReadOnly="false" @bind-Text="Solicitud.TelefonoResidencia"/></FieldBody>
        </Field>
        <Field Horizontal ColumnSize="ColumnSize.Is4">
            <FieldLabel ColumnSize="ColumnSize.Is3">Celular</FieldLabel>
            <FieldBody ColumnSize="ColumnSize.Is9"><TextEdit ReadOnly="false" @bind-Text="Solicitud.Celular"/></FieldBody>
        </Field>
        <Field Horizontal ColumnSize="ColumnSize.Is4">
            <FieldLabel ColumnSize="ColumnSize.Is3">Email</FieldLabel>
            <FieldBody ColumnSize="ColumnSize.Is9"><TextEdit ReadOnly="false" @bind-Text="Solicitud.Email"/></FieldBody>
        </Field>
    </Fields>
    <Divider DividerType="DividerType.TextContent" Text="Información Laboral"/>
    <Fields Margin="Margin.Is1.FromTop">
        <Field Horizontal ColumnSize="ColumnSize.Is8">
            <FieldLabel ColumnSize="ColumnSize.Is3">Lugar de Trabajo</FieldLabel>
            <FieldBody ColumnSize="ColumnSize.Is9"><TextEdit ReadOnly="false" @bind-Text="Solicitud.LugarTrabajo"/></FieldBody>
        </Field>
        <Field Horizontal ColumnSize="ColumnSize.Is4">
            <FieldLabel ColumnSize="ColumnSize.Is3">Cargo</FieldLabel>
            <FieldBody ColumnSize="ColumnSize.Is9"><TextEdit ReadOnly="false" @bind-Text="Solicitud.Posición"/></FieldBody>
        </Field>
    </Fields>
    <Fields Margin="Margin.Is1.FromTop">
        <Field Horizontal ColumnSize="ColumnSize.Is4">
            <FieldLabel ColumnSize="ColumnSize.Is4">Teléfono Of.</FieldLabel>
            <FieldBody ColumnSize="ColumnSize.Is8"><TextEdit ReadOnly="false" @bind-Text="Solicitud.TelefonoOficina"/></FieldBody>
        </Field>
        <Field Horizontal ColumnSize="ColumnSize.Is4">
            <FieldLabel ColumnSize="ColumnSize.Is4">Flota</FieldLabel>
            <FieldBody ColumnSize="ColumnSize.Is8"><TextEdit ReadOnly="false" @bind-Text="Solicitud.TelefonoFlota"/></FieldBody>
        </Field>
        <Field Horizontal ColumnSize="ColumnSize.Is4">
            <FieldLabel ColumnSize="ColumnSize.Is4">Email Of.</FieldLabel>
            <FieldBody ColumnSize="ColumnSize.Is8"><TextEdit ReadOnly="false" @bind-Text="Solicitud.EmailTrabajo"/></FieldBody>
        </Field>
    </Fields>
    <Fields Margin="Margin.Is1.FromTop">
        <Field Horizontal ColumnSize="ColumnSize.Is6">
            <FieldLabel ColumnSize="ColumnSize.Is4">Nombre Asistente</FieldLabel>
            <FieldBody ColumnSize="ColumnSize.Is8"><TextEdit ReadOnly="false" @bind-Text="Solicitud.NombreAsistente"/></FieldBody>
        </Field>
        <Field Horizontal ColumnSize="ColumnSize.Is6">
            <FieldLabel ColumnSize="ColumnSize.Is4">Email Asistente</FieldLabel>
            <FieldBody ColumnSize="ColumnSize.Is8"><TextEdit ReadOnly="false" @bind-Text="Solicitud.EmailAsitente"/></FieldBody>
        </Field>
    </Fields>

</Container>
@code {
    [Parameter] public Solicitud Solicitud { get; set; }
}